<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Dark Theme Colors -->
    <Color x:Key="BackgroundColor">#121212</Color>
    <Color x:Key="SurfaceColor">#1E1E1E</Color>
    <Color x:Key="AlternateSurfaceColor">#252525</Color>
    <Color x:Key="PrimaryColor">#2196F3</Color>
    <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
    <Color x:Key="TextColor">#E0E0E0</Color>
    <Color x:Key="SecondaryTextColor">#B0B0B0</Color>
    <Color x:Key="BorderColor">#3C3C3C</Color>
    <Color x:Key="GridLineColor">#2C2C2C</Color>
    <Color x:Key="HeaderColor">#2C2C2C</Color>
    <Color x:Key="HoverColor">#2C2C2C</Color>
    <Color x:Key="SelectionColor">#3C3C3C</Color>
    <Color x:Key="ScrollBarBackgroundColor">#1A1A1A</Color>
    <Color x:Key="ScrollBarThumbColor">#555555</Color>
    <Color x:Key="ScrollBarThumbHoverColor">#777777</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="AlternateSurfaceBrush" Color="{StaticResource AlternateSurfaceColor}"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="GridLineBrush" Color="{StaticResource GridLineColor}"/>
    <SolidColorBrush x:Key="HeaderBrush" Color="{StaticResource HeaderColor}"/>
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
    <SolidColorBrush x:Key="SelectionBrush" Color="{StaticResource SelectionColor}"/>
    <SolidColorBrush x:Key="ScrollBarBackgroundBrush" Color="{StaticResource ScrollBarBackgroundColor}"/>
    <SolidColorBrush x:Key="ScrollBarThumbBrush" Color="{StaticResource ScrollBarThumbColor}"/>
    <SolidColorBrush x:Key="ScrollBarThumbHoverBrush" Color="{StaticResource ScrollBarThumbHoverColor}"/>

    <!-- Event Level Colors (adjusted for dark theme) -->
    <SolidColorBrush x:Key="ErrorBrush" Color="#EF5350"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFA726"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#42A5F5"/>
    <SolidColorBrush x:Key="VerboseBrush" Color="#9E9E9E"/>

    <!-- Additional Dark Theme Specific Colors -->
    <SolidColorBrush x:Key="AccentBrush" Color="#BB86FC"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#66BB6A"/>
    <SolidColorBrush x:Key="DisabledBrush" Color="#616161"/>
    
    <!-- Code/Log Viewer Specific -->
    <SolidColorBrush x:Key="CodeBackgroundBrush" Color="#0D0D0D"/>
    <SolidColorBrush x:Key="LineNumberBrush" Color="#858585"/>
    <SolidColorBrush x:Key="HighlightBrush" Color="#264F78"/>

</ResourceDictionary>