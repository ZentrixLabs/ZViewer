<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light Theme Colors -->
    <Color x:Key="BackgroundColor">#FAFAFA</Color>
    <Color x:Key="SurfaceColor">#FFFFFF</Color>
    <Color x:Key="AlternateSurfaceColor">#F5F5F5</Color>
    <Color x:Key="PrimaryColor">#1976D2</Color>
    <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
    <Color x:Key="TextColor">#212121</Color>
    <Color x:Key="SecondaryTextColor">#757575</Color>
    <Color x:Key="BorderColor">#E0E0E0</Color>
    <Color x:Key="GridLineColor">#E0E0E0</Color>
    <Color x:Key="HeaderColor">#F5F5F5</Color>
    <Color x:Key="HoverColor">#E3F2FD</Color>
    <Color x:Key="SelectionColor">#BBDEFB</Color>
    <Color x:Key="ScrollBarBackgroundColor">#F0F0F0</Color>
    <Color x:Key="ScrollBarThumbColor">#C0C0C0</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="AlternateSurfaceBrush" Color="{StaticResource AlternateSurfaceColor}"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="GridLineBrush" Color="{StaticResource GridLineColor}"/>
    <SolidColorBrush x:Key="HeaderBrush" Color="{StaticResource HeaderColor}"/>
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
    <SolidColorBrush x:Key="SelectionBrush" Color="{StaticResource SelectionColor}"/>
    <SolidColorBrush x:Key="ScrollBarBackgroundBrush" Color="{StaticResource ScrollBarBackgroundColor}"/>
    <SolidColorBrush x:Key="ScrollBarThumbBrush" Color="{StaticResource ScrollBarThumbColor}"/>

    <!-- Event Level Colors -->
    <SolidColorBrush x:Key="ErrorBrush" Color="#D32F2F"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#F57C00"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#1976D2"/>
    <SolidColorBrush x:Key="VerboseBrush" Color="#757575"/>

</ResourceDictionary>