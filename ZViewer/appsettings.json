{
  "ZViewer": {
    "DefaultPageSize": 1000,
    "MaxExportSize": 100000,
    "DefaultTimeRange": "4Hours",
    "EnableAutoRefresh": false,
    "RefreshInterval": 30000,
    "SearchDebounceMs": 300,
    "Theme": "Light",
    "EnableVirtualization": true,
    "VirtualizationThreshold": 10000
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "File": {
      "Path": "Logs/zviewer-{Date}.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 7
    }
  }
}